<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:id="@+id/monitor">

    <TextView
        android:id="@+id/seatbelt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SeatBelt 1"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/seatbelt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt1"
        android:text="SeatBelt 2"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt2"
        android:text="SeatBelt 3"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt3"
        android:text="SeatBelt 4"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt4"
        android:text="SeatBelt 5"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt5"
        android:text="SeatBelt 6"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt6"
        android:text="SeatBelt 7"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt7"
        android:text="SeatBelt 8"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt8"
        android:text="SeatBelt 9"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/seatbelt10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/seatbelt9"
        android:text="SeatBelt 10"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>

</RelativeLayout>